{
  "name": "@42.nl/spring-connect",
  "version": "4.2.0",
  "description": "Connecting with a Spring REST APIs in a domain friendly manner",
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/42BV/mad-spring-connect.git"
  },
  "keywords": [
    "REST",
    "fetch",
    "Spring"
  ],
  "author": "Maarten Hus",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/42BV/mad-spring-connect/issues"
  },
  "homepage": "https://github.com/42BV/mad-spring-connect#readme",
  "dependencies": {
    "lodash.merge": "4.6.2",
    "query-string": "6.4.0"
  },
  "peerDependencies": {},
  "devDependencies": {
    "@types/fetch-mock": "7.2.3",
    "@types/jest": "26.0.0",
    "@types/lodash.merge": "4.6.6",
    "@typescript-eslint/eslint-plugin": "3.3.0",
    "@typescript-eslint/parser": "3.3.0",
    "eslint": "7.2.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.4",
    "fetch-mock": "9.10.1",
    "isomorphic-fetch": "2.2.1",
    "jest": "26.0.1",
    "np": "6.2.4",
    "prettier": "2.0.5",
    "ts-jest": "26.1.0",
    "typescript": "3.9.5",
    "husky": "4.2.5",
    "lint-staged": "10.2.11"
  },
  "scripts": {
    "ts": "tsc --version && tsc",
    "clean": "rm -rf dist",
    "start": "jest --watch --coverage",
    "test": "npm run lint && npm run ts && jest --coverage --no-cache",
    "build": "npm run clean && npm run ts",
    "lint": "eslint src --ext js,jsx,ts,tsx --max-warnings=0",
    "release": "np --otp",
    "docs": "jekyll serve --source docs",
    "version": "npm run clean && npm run test && npm run build && jekyll build && git add docs && git clean -df"
  },
  "jest": {
    "preset": "ts-jest",
    "roots": [
      "src",
      "tests"
    ],
    "collectCoverageFrom": [
      "./src/**/*.{ts,tsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "restoreMocks": true
  },
  "lint-staged": {
    "{src,tests}/**/*.{js,jsx,json,scss,ts,tsx}": [
      "prettier --single-quote --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
