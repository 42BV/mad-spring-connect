{
  "compilerOptions": {
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "downlevelIteration": true,
    "lib": ["dom", "es6", "es2015.promise"],
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "./lib",
    "strict": true,
    "target": "es6",
    "esModuleInterop": true
  },
  "files": ["src/index.ts"],
  "exclude": ["node_modules"]
}
